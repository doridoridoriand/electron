   // We only handle key down events and just simply forward other events.
   if (eventType != NSKeyDown) {
     _hostHelper->ForwardKeyboardEvent(event, latency_info);
@@ -1751,9 +1771,11 @@ - (NSAccessibilityRole)accessibilityRole {
